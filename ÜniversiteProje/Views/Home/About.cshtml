@{
    ViewBag.Title = "Öğrenci Ekle";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Ekle", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="id">ID:</label>
        <input type="text" name="id" id="id" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="ad">Adı:</label>
        <input type="text" name="ad" id="ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="soyad">Soyadı:</label>
        <input type="text" name="soyad" id="soyad" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Öğrenci Ekle</button>
}
